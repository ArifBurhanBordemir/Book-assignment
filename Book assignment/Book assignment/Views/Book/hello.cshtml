@model Book


<html>
<head>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }

    </style>
</head>
<body>
    <table>

        <tr>
            <td>Name of the book</td>
            <td>@Model.name</td>
        </tr>
        <tr>
            <td>Author of the book</td>
            <td>@Model.author</td>
        </tr>
        <tr>
            <td>Page Numberof the book</td>
            <td>@Model.page_number</td>
        </tr>
        @{
            double remainingDays = Math.Round(Model.remainingTime.TotalDays, 1);
            //string color = remainingDays < 5 ? "red" : "green";
            string color;
            if (remainingDays < 5)
            {
                color = "red";
            }
            else if (remainingDays < 9)
            {
                color = "yellow";
            }
            else
            {
                color = "green";
            }
        }
        <tr style="background-color :@color">
            <td>Remaining Days</td>

            <td>@Math.Round(@Model.remainingTime.TotalDays, 1) gün</td>
        </tr>
        <tr>
        </tr>
    </table>
</body>
</html>


